<h1 class="display-5 fw-bold text-body-emphasis text-center">Hello JavaScript</h1>

{{#if kampaniya.length}}
{{#each kampaniya}}
   <div class="card mb-3">
    <img class="card-img-top" src="{{img}}" alt="{{title}}">
    <div class="card-body">
        <h5 class="name">{{name}}</h5>
        <p class="vazifasi">{{vazifasi}}</p>
        <b><p class="maosh">{{maosh}}</p></b>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
</div>
{{/each}}
{{else}}
    <p>Hozircha hech qanday e`lon yoq</p>
{{/if}}